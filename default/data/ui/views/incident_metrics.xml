  <row>
    <panel>
      <title>Tracked Incidents over Time</title>
      <input type="dropdown" token="selSpan" searchWhenChanged="true">
        <label>Span</label>
        <choice value="1d">Day</choice>
        <choice value="1w">Week</choice>
        <choice value="1mon">Month</choice>
        <choice value="3mon">Quarter</choice>
        <default>1mon</default>
      </input>
      <input type="dropdown" token="selByField">
        <label>By Field</label>
        <choice value="by analystUsername">Analyst</choice>
        <choice value="by playbook">Playbook</choice>
        <choice value="">None</choice>
        <default>by playbook</default>
      </input>
      <chart>
        <search base="baseSearch">
          <query>| bucket _time  | timechart span=$selSpan$ count $selByField$ | addtotals</query>
        </search>
